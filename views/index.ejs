<body>
    <%- include('header.ejs') %>
    <% if(locals.msg && msg==="login_success" ) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <p class="">Logged in successfully</p>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <% }
    %>
    <div class="container">
        <div class="row">
            <div class="col-8">
                <img class="chili" src="images/chili.jpg" alt="" />
            </div>
            <div class="col-4">
